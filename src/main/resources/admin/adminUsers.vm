#* @vtlvariable name="user" type="model.User" *#

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin</title>
    #parse("/admin/admin-head.vm")
    <script>
        $(document).ready(function () {
            $('.remove-user-link').click(function (e) {
                e.preventDefault();
                var row = $(this).closest('tr');
                $.ajax({
                    type: 'DELETE',
                    url: '/protected/admin/removeuser=userId=' + $(this).data('userid'),
                    success: function (res) {
                        row.remove();
                    },
                    error: function (res) {
                        alert('unable to remove user');
                    }
                });
            });
        });
    </script>


</head>
<body>


<div id="content">


    #parse("/admin/navbar.vm")

    <div class="row">
        <div class="col-md-2"> </div>
        <div class="col-md-8">
            <h1>Content</h1>
            <table>
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Namn</th>
                    <th>KÃ¶n</th>
                    <th>Ta bort</th>
                </tr>
                </thead>
                <tbody>
                #foreach($user in $users)
                    <tr>
                        <td>$user.id</td>
                        <td>$user.name</td>
                        <td>$user.gender.getFrontname()</td>
                        <td><a data-userid="$user.id" class="remove-user-link">Ta bort</a></td>
                    </tr>
                #end
                </tbody>
            </table>
        </div>
        <div class="col-md-2"> </div>
    </div>

</div>


</body>
</html>
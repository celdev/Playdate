<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Logga in</title>

    <link rel="stylesheet" href="css/themes/style.css" />
    <link rel="stylesheet" href="css/themes/jquery.mobile.icons.min.css" />
    <link rel="stylesheet" href="css/new-main.css">
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="http://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker({dateFormat:"dd-mm-yy", changeYear: true});
        });

        var time = $('#timePicker1').val();
        $('#timePicker1').val("09:30");
    </script>
</head>
<body>
<div data-role="page" id="skapa-pd" data-theme="d">
    <div data-role="header" data-position="fixed "id="login-header">
        <div id="head-logo"><img src="/images/playdate_logga_1.png"></div>
    </div>
    <div data-role="main" class="ui-content">
        <label for="text-input">Titel</label>
        <input type="text" name="text-field" id="text-field" value="">
        <div class="ui-grid-a">
            <div class="ui-block-a" id="date"><label for="text-input">Datum</label>
                <input type="text" data-role="date" id="datepicker"></div>
            <div class="ui-block-b" id="time"><label for="text-input">Tid</label>
                <input type="time" name="timePicker1" id="timePicker1" value="12:00"></div>
        </div><!-- /grid-a -->
        <label for="text-input">Plats</label>
        <input type="search" name="password" id="search" value="" placeholder="Sök plats..." href="#search-place"><br>
        <div id="dropbox-cd">
            <select name="select-native-s" id="select-native-s">
                <option value="small">Privat</option>
                <option value="small">För vänner</option>
                <option value="medium">Offentlig</option>
            </select><br>
        </div>
        <label for="text-input">Beskrivning</label>
        <textarea cols="40" rows="8" name="textarea" id="textarea"></textarea>

        <button class="ui-btn">Skapa Playdate!</button>
    </div>
    <div data-role="footer" data-position="fixed" id="footer">
        <div class="ui-nodisc-icon" id="back-btn">
        </div>
        <h3>FooterMenu</h3>
    </div>
</div>
<div data-role="page" id="search-place" data-theme="d">
</div>
</body>
</html>